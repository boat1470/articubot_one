<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <joint name="arm_joint" type="fixed">
        <parent link="chassis"/>
        <child link="arm_frame"/>
        <origin xyz="0.0 0 0.075" rpy="0 0 0"/>
    </joint>

    <link name="arm_frame">
        <visual>
            <geometry>
                <box size="0.02 0.02 0.1"/>
